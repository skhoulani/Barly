doctype(html)
html
  head
    meta(charset="utf-8")
    title A Revolutionary New Drink Ordering App - Barly
    link(rel="stylesheet" type="text/css" href="css/styles.css")
  body
    .login-register-content
      .title Bar.ly
      .form
        form(method="POST" id="signup-form" class="register-form")
          input(type='hidden', name='_csrf', value=_csrf)
          input(type="email" id="email" class="text-box" name="email" placeholder="Email" autofocus required)
          input(type="password" class="text-box" name="password" id="password" placeholder="Password" required)
          input(type="password" class="text-box" name="confirmPassword" id="confirmPassword" placeholder="Re-Enter Password" required)
          button(type="submit" name="sign-in") Sign Up
      .bottom-text By creating an account, you agree to our
        .blue-text Marketplace User Agreement
        p and
        .blue-text Privacy Policy
